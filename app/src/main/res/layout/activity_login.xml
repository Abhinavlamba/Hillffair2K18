<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="80dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            >
            <RelativeLayout
                android:id="@+id/topText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                >

                <TextView
                    android:id="@+id/getText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ps"
                    android:gravity="end"
                    android:text="NITH"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/intoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getText"
                    android:layout_marginTop="-24dp"
                    android:fontFamily="@font/ps"
                    android:gravity="end"
                    android:text="Hillffair"
                    android:textColor="@color/black"
                    android:textSize="40sp" />
                <TextView
                    android:id="@+id/usText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="-4dp"
                    android:layout_toRightOf="@id/intoText"
                    android:fontFamily="@font/psb"
                    android:text="2K18"
                    android:textColor="@color/black"
                    android:textSize="70sp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_below="@id/topText"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Phone Number"
                    android:textSize="17dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/psb"
                    android:textColor="@color/black"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/black_corner_box"
                    android:fontFamily="@font/ps"
                    android:hint="+919900383942"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:textColor="#000"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:text="Enter OTP"
                    android:textSize="17dp"
                    android:fontFamily="@font/psb"
                    android:textColor="@color/black"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/black_corner_box"
                    android:fontFamily="@font/ps"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:hint="@string/enter_otp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_generate_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        android:layout_toLeftOf="@id/btn_sign_in"
                        app:contentPadding="8dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/back"
                            android:clickable="false"
                            android:fontFamily="@font/ps"
                            android:padding="4dp"
                            android:text="Generate OTP"
                            android:textColor="#000"
                            android:gravity="center"
                            android:textSize="15dp"
                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="8dp"
                        android:layout_weight="2"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/back"
                            android:clickable="false"
                            android:fontFamily="@font/ps"
                            android:padding="4dp"
                            android:text="Verify"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="15dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>